# Example environment configuration for Ultimate JavaScript Development Workspace
# Copy this file to .env and update with your values

# SSH Configuration
# Your SSH public key for authentication (required for SSH access)
SSH_PUBLIC_KEY=

# API Keys
# Claude API key for Claude Code CLI (optional)
CLAUDE_API_KEY=

# Gemini API key for Gemini CLI (optional)
GEMINI_API_KEY=

# Code Server Configuration
# Password for Code Server web interface (auto-generated if not provided)
CODE_SERVER_PASSWORD=

# Node.js Configuration
# Default Node.js version to install via NVM (default: 22)
NODE_VERSION=22

# Additional Configuration
# Code Server version (default: 4.101.2)
CODE_SERVER_VERSION=4.101.2

# Claude Code version (default: 1.0.48)
CLAUDE_CODE_VERSION=1.0.48

# Deno version (default: 2.4)
DENO_VERSION=2.4

# Bun version (default: 1.2.17)
BUN_VERSION=1.2.17

# NVM version (default: 0.40.3)
NVM_VERSION=0.40.3

# Python Configuration
# Python version (default: 3.13)
PYTHON_VERSION=3.13

# Miniconda version (default: py313_24.7.1-0)
MINICONDA_VERSION=py313_24.7.1-0

# UV package manager version (default: 0.7.20)
UV_VERSION=0.7.20

# Ruff linter version (default: 0.12.0)
RUFF_VERSION=0.12.0

# Networking and Security
# Tailscale authentication key (optional - for automatic VPN connection)
TAILSCALE_AUTHKEY=

# Webmin Configuration
# Webmin admin password (default: webmin)
WEBMIN_PASSWORD=

# Conda Configuration
# Default conda environment name (default: base)
CONDA_ENV=base